{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "es2021": true, // Update to support ES2021 features
    "node": true,
    "jest": true // Add Jest to the plugins array
  },
  "plugins": ["jest"], // Add Jest to the plugins array
  "parserOptions": {
    "ecmaVersion": 12, // Update to support ES2021 features
    "sourceType": "module" // Enable module syntax
  },
  "rules": {
    "semi": ["error", "always"],
    "indent": ["error", 2],
    "no-console": "off"
  }
}
